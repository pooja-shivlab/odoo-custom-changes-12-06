<odoo>

    <record id="view_product_template_component_rel_tree" model="ir.ui.view">
        <field name="name">view.product.template.component.rel.tree</field>
        <field name="model">product.template.component.rel</field>
        <field name="arch" type="xml">
            <tree string="Product Template Components" create="true">
                <field name="product_component_id" string="Components"/>
                <field name="value_type"/>
                <field name="min_value"/>
                <field name="max_value"/>
            </tree>
        </field>
    </record>

    <record id="view_product_template_component_rel_form" model="ir.ui.view">
        <field name="name">view.product.template.component.rel.form</field>
        <field name="model">product.template.component.rel</field>
        <field name="arch" type="xml">
            <form string="Product Template Components">
                <field name="product_component_id" string="Components"/>
                <field name="value_type"/>
                <field name="min_value"/>
                <field name="max_value"/>
            </form>
        </field>
    </record>

    <!-- Inherit Sale Order Line Form View to Add Button -->
    <record id="sale_order_view_form_inherit_3" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.3</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//field[@name='order_line']//tree/field[@name='product_template_id']" position="after">
                <button name="open_product_components_action" type="object" icon="fa-pencil"
                        title="Edit Configuration"/>
            </xpath>
        </field>
    </record>
</odoo>
