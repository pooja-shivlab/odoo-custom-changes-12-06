<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="my_modal_relay">
        <div class="modal fade" id="my_modal" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content" style="border-radius: 0.5rem; border: none; padding: 1.5rem;">
                    <div class="modal-header" style="border-bottom: none; padding: 0.3rem;">
                        <h5 class="modal-title" style="font-size: 2rem; font-weight: 500; color: #D23F3A;">Oh snap!</h5>
                    </div>
                    <div class="modal-body " style="padding: 0.5rem;">
                        <p t-esc="warning">This is the content of the modal.</p>
                    </div>
                    <div class="modal-footer" style="border-top: none;  display: flex; justify-content: flex-start; padding: 0.5rem;">
                        <button type="button" class="btn btn-primary" id="stay-here-btn" data-dismiss="modal"
                                style="margin-right: 8px;">Stay here</button>
                        <button type="button" class="btn btn-secondary" id="discard-changes-btn">Discard changes</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
